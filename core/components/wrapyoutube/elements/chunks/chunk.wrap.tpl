<a href="[[+link]]" data-toggle="modal" data-target="#modal_[[+id]]" class="WY_link">
    <img src="[[+img]]" width="[[+width]]" height="[[+height]]">
</a>

<div class="modal fade WY_modal" id="modal_[[+id]]" tabindex="-1" role="dialog"
 aria-labelledby="modal_label_[[+id]]" data-embed="[[+embed]]">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body WY_body">
      </div>
    </div>
  </div>
</div>